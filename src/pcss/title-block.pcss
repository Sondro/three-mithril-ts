.title-block {
	text-align: center;

	& .start-block {
		margin-top: 2em;
	}

	& .loading {
		text-align: center;

		& .message {
			margin-bottom: 1em;
		}

		& .bar-outer {
			display: inline-block;
			width: 10em;
			height: 0.3em;
			border: #999 1px solid;
			background-color: #AAA;
		}

		& .bar {
			width: 0%;
			height: 100%;
			background-color: #CCC;
		}
	}
}
